/**index.wxss**/
page{
  background-color: gainsboro;
  height: 100%;
}

/*头部广告*/
.swiperView{
  width: 100%;
  height: 60%;
}
.slide-image{
  width: 100%;
  height: 100%;
}

/*标题整体部分*/
.titleAllView{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
}
/*标题*/
.titleAllView .titleView{
  margin: 10rpx,10rpx,10rpx,10rpx;
  font-size: 30rpx;
  width: 100%;
}
/*下面价格*/
.titleAllView .titleBottomView{
  width: 100%;
}
/*标题下面现商品价格*/
.titleAllView .titleBottomView .titleNowPriceView{
  margin-top: 5rpx;
  width: 50%;
  font-size: 35rpx;
  text-align: center;
  color: red;
}

/*标题下面原商品价格*/
.titleAllView .titleBottomView .titlePriceView{
  margin-top: 5rpx;
  text-decoration:line-through;
  width: 50%;
  font-size: 35rpx;
  text-align: center;
  color: grey;
}

